var nonscale4Bgs = [];

function dialogueEntryNullChecks()
{
	for (dialogueEntry in PlayState.instance.dialogue)
	{
		if (!nonscale4Bgs.contains(dialogueEntry.background))
			dialogueEntry.backgroundSettings ??= {scaleOffsets: {x: 4, y: 4}};
		else
			dialogueEntry.backgroundSettings ??= {};

		if (dialogueEntry.background == 'room-bed')
			dialogueEntry.backgroundSettings.positionOffsets = {scaleOffsets: {x: 0, y: -50}};
	}
}
