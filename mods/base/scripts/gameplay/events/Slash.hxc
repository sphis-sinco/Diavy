function Slash()
{
	ScriptsManager.callScript('playSound', ['snd_damage']);

	PlayState.instance.dialogue_text.completeCallback = () ->
	{
		FlxFlicker.flicker(PlayState.instance.dialogue_character, 1);
		FlxTimer.wait(1, () ->
		{
			ScriptsManager.callScript('gainControl');
			PlayState.instance.nextDialogue();
			PlayState.instance.dialogue_text = new DialogueTextInitalizer(PlayState.instance.dialogue_text).getValues();
		});
	}
}
